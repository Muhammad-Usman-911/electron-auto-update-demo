{
  "name": "electron-auto-update-demo",
  "version": "1.0.0",
  "description": "Demo Electron app with auto-update functionality",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --mac --win --publish never",
    "deploy": "electron-builder build --mac --win --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/electron-auto-update-demo.git"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.mo-usman.electron-auto-update-demo",
    "productName": "Electron Auto Update Demo",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yourusername",
        "repo": "electron-auto-update-demo"
      }
    ]
  }
}